<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="public/stylesheets/style.css">
<meta charset="UTF-8">
<style>
div#test{  
		width: 400px;
		height: 150px;
		margin: auto;
		border-width: 2px;
		border-style: dotted;
		border-color: blue;
		padding: 20px 40px 40px 40px; 
		}
</style>
<script>
var pos = 0, test, test_status, question, choice, choices, chA, chB, chC, correct = 0;
var questions = [
    [ "What is 14 + 2?", "12", "14", "16", "C" ],
	[ "What is 19 + 3?", "27", "22", "11", "B" ],
	[ "What is 6 x 5?", "30", "24", "25", "A" ],
	[ "What is 4 / 4?", "1", "2", "4", "A" ]
];
function _(x){
	return document.getElementById(x);
}

function renderQuestion(){
	var percent = (correct/questions.length)*100
	test = _("test");
	if(pos >= questions.length){
		test.innerHTML = "<h2>You got "+percent+"% of the questions correct.</h2>";
		test.innerHTML += "<button class='retake' onclick='retakeTest()'>Retake</button>";
		_("test_status").innerHTML = "Test Completed";
		pos = 0;
		correct = 0;
		return false;

	}
	_("test_status").innerHTML = "Question "+(pos+1)+" of "+questions.length;
	question = questions[pos][0];
	chA = questions[pos][1];
	chB = questions[pos][2];
	chC = questions[pos][3];
	test.innerHTML = "<h3>"+question+"</h3>";
	test.innerHTML += "<input type='radio' name='choices' value='A'> "+chA+"<br>";
	test.innerHTML += "<input type='radio' name='choices' value='B'> "+chB+"<br>";
	test.innerHTML += "<input type='radio' name='choices' value='C'> "+chC+"<br><br>";
	if(pos != 0){
		test.innerHTML += "<button class='left' onclick='previousAnswer()'>Previous</button>";
	}
	test.innerHTML += "<button class='submit' onclick='checkAnswer()'>Submit</button>";
}

function correcto(){
	test = _("test");
	_("test_status").innerHTML = "That is correct!";
	test.innerHTML = ""
	test.innerHTML += "<button class='button' onclick='previousAnswer()'>See Question Again</button>";
	test.innerHTML += "<button class='next' onclick='nextAnswer()'>Next Question</button>";
}

function incorrect(){
	test = _("test");
	_("test_status").innerHTML = "That is incorrect.";
	test.innerHTML = ""
	test.innerHTML += "<button class='button' onclick='previousAnswer()'>See Question Again</button>";
	test.innerHTML += "<button class='next' onclick='nextAnswer()'>Next Question</button>";
}

function retakeTest(){
	renderQuestion();
}

function nextAnswer(){
	renderQuestion();
}

function checkAnswer(){
	var percent = (correct/questions.length)*100
	test = _("test");
	if(pos >= questions.length){
		test.innerHTML = "<h2>You got "+percent+"% of the questions correct.</h2>";
		test.innerHTML += "<button class='retake' onclick='retakeTest()'>Retake</button>";
		_("test_status").innerHTML = "Test Completed";
		pos = 0;
		correct = 0;
		return false;
	}
	choices = document.getElementsByName("choices");
	for(var i=0; i<choices.length; i++){
		if(choices[i].checked){
			choice = choices[i].value;
		}
	}
	if(choice == questions[pos][4]){
		correct++;
		correcto();
	}
	if(choice != questions[pos][4]){
		incorrect();
	}
	pos++;
	
}
function previousAnswer(){
	if(pos==0){
		alert("This is the first question.")
	}
	else{
		if(choice == question[pos][4]){
			correct--
		}
		pos--;
		renderQuestion();
	}
}
window.addEventListener("load", renderQuestion, correcto, incorrect, false);
</script>
</head>
<body>
<h2 id="test_status"></h2>
<div id="test"></div>
</body>
</html>